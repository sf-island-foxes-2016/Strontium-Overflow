<h1>Login</h1>

<% if @error_true == true %>
<p style="color:red">You entered an incorrect password or email address or are not logged in. Please try logging in.</p>
<% elsif @error_no_right_to_post == true %>
<div style="color:red"><p>This is not your post and/or you have not logged in.</p><p> Before you may edit a post, you must login.</p><p>If you believe you reached this page in error, please click below to return.</div><FORM><INPUT Type="button" VALUE="Go Back!" onClick="history.go(-1);return true;"></p></FORM><hr>
<p>Otherwise, please login here:</p>
<% end %>

<form method="post" action="/users/login">
  <input type="hidden" name="error_variable" value="<% if @error_true || @error_no_right_to_post %>redirect<% end %>" />
  <label for="user_email_input">
  <input name="email" type="text" placeholder="Email">
  <br>
  <label for="user_password_input">
  <input name="password" type="password" placeholder="Password">
  <br>
  <input type="submit" value="Login">
</form>
