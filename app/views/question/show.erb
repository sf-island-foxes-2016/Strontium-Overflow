<%= erb :'question/_show', :locals => { :question => @question } %>

<div class='answer_list'>
  <div class='answer-header row col-md-12'>
    <h3 id='answer-header-title'><%= @question.answers.count %> Answers</h3>
  </div>
  <ul>
  <% @question.answers.each do |answer| %>
    <li><%= erb :'answer/_show', :locals => { :answer => answer } %></li>
  <% end %>
  <ul>
</div>

<div class="comment_list">
  <ul class='individual-comment'>

<div class="comment_list for_question">
  <ul>
    <% @question.comments.each do |comment| %>
      <%= erb :'comment/_show', :locals => { :comment => comment } %>
    <% end %>
  <ul>
</div>

