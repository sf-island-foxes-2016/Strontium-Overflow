<div class='question-list col-md-12 col-md-offset-1'>
  <% @questions.each do |question| %>
	<div class='question-summary'>
		<div class='votes-answers'>
			<div class='votes'>
				<div class='mini-counts'>
					<span>0</span>
				</div>
				<div>votes</div>
			</div>
			<div class='answers'>
				<div class='mini-counts'>
					<span>0</span>
				</div>
				<div>answers</div>
			</div>
		</div>
		<div class='question-summary-title'>
			<h3><a href='/questions/<%= question.id %>'><%= question.title %></a></h3>
		</div>
		<div class='question-summary-user'>
			<span>asked by</span>
			<a href=''><%= question.user %></a>
			<!-- question.user isn't a thing? need to be able to access the user names here -->
		</div>
	</div>
  <% end %>
</div>