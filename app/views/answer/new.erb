<%= erb :'/question/_show' %>

<h1>Create an answer</h1>

<form method="post" action="/answers">
  <input type="hidden" name="answer[question_id]" value="<%= @question.id %>">
  <label for="answer_text_input">
  <textarea id="answer_text_input" name="answer[text]" cols="92" rows="15" placeholder="Post your answer here!" pattern=".{10,}" required title="Come on!  Please type a real answer!"></textarea>
  <br>
  <input type="submit" value="Submit your answer!">
</form>

